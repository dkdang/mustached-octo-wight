<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dk.cardashboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:name=".CarDashboard"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dk.cardashboard.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddCarActivity"
            android:label="@string/title_AddCarActivity" >
        </activity>
        <activity
            android:name=".activity.AddFuelEventActivity"
            android:label="@string/title_AddFuelEventActivity" >
        </activity>
        <activity
            android:name=".activity.CarListActivity"
            android:label="@string/title_CarListActivity" >
        </activity>
        <activity 
            android:name=".activity.FuelEventListActivity"
            android:label="@string/title_FuelEventActivity" >
        </activity>
    </application>

</manifest>
